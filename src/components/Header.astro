---
export interface Props {
  title: string;
  link1_title: string;
  link1_desc: string;
  link2_title: string;
  link2_desc: string;
}

const { title, link1_title, link2_title, link1_desc, link2_desc } =Astro.props;

---

<div class="flex flex-row">
  <a href="/" class="basis-1/3"> <h1 >{title}</h1></a>  
  <a href={link1_desc} class="basis-1/4"> <h3>{link1_title}</h3> </a>
  <a href={link2_desc} class="basis-1/4"> <h3>{link2_title}</h3> </a>
</div>